.user_header{
  width:100%;
  height:400rpx;
  overflow: hidden;
  position: absolute;
  left:0;
  top:0;
  z-index: -1;
}
.user_header_bg{
  width:100%;
}
.user-module{
  width:90%;
  margin:200rpx auto 0 auto;
  border-radius: 20rpx;
  height:300rpx;
  position: relative;
  background-color: #fff;
}
.avatar-left {
  width:165rpx;
  height:150rpx;
  border-top-right-radius:75rpx;
  border-top-left-radius:75rpx;
  border-bottom-left-radius:200rpx;
  overflow:hidden;
  position:absolute;
  left:50%;
  top:50rpx;
  margin-left:-113rpx;
}

.avatar-right{
  width:133rpx;
  height:150rpx;
  position:absolute;
  left:50%;
  top:72rpx;
  border-top-right-radius: 75rpx;
  border-top-left-radius: 75rpx;
  border-bottom-right-radius: 200rpx;
  overflow: hidden;
}
.user_xin{
  width:300rpx;
  position: absolute;
  left:50%;
  top:50rpx;
  margin-left:-150rpx;
  z-index: 9;
}
