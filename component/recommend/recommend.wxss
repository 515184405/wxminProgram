@import '/app.wxss';
@import "/utils/wxParse/wxParse.wxss";
.recommend-module{
  background-color: #fff;
  margin-top:20rpx;
}
.recomment-item{
  padding:25rpx 20rpx;
  border-bottom:1px solid #f5f7f9;
}
.recommend-left{
  width:calc(100% - 240rpx);
  position: relative;
}
.recomment-item:last-child{
  margin-bottom:0!important;
}
.recommend-title{
  padding:20rpx;
  border-bottom:1px solid #f1f1f1;
  font-size: 30rpx;
}
.rec-title-text{
  width:calc(100% - 160rpx);
}
.rec-title-price{
  width:160rpx;
  color:#f55;
  text-align: left;
  font-weight: bold;
  padding-left:20rpx;
  box-sizing:  border-box;
}
.rec-left-title{
  color:#000;
  margin-bottom:80rpx;
}
.rec-left-desc{
  font-size: 24rpx;
  color:#999;
  margin-top:10rpx;
  max-height:60rpx;
  position: absolute;
  left:0;
  bottom:0;
  width:100%;
  overflow: hidden!important;
  display: block!important;
}
.recommend-img{
  width:180rpx;
  vertical-align: bottom;
}
.recommend-width{
  width:100%;
  height:120rpx;
  display: block;
}
.overflow-text2 view{
  white-space:nowrap;
  overflow:hidden; 
  font-size: 22rpx;
  text-overflow:ellipsis;
}