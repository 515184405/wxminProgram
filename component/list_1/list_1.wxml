<view class='list_1'>
   <view class='fm-module-list'>
       <view class='fm-module-item2'wx:for="{{scene}}" wx:key=''>
         <view class='fm2-module-title'>
           {{item.title}}
         </view>
         <view class='fm-module-desc flex x-between'>
            <view>
               {{item.dress}}
            </view>
            <view wx:if="{{item.price}}" class='item-price'>
              ￥{{item.price}}
            </view>
         </view>
         <view class='fm-image-box clearfix'>
            <navigator url='/pages/system_detail/system_detail' open-type='navigate' wx:if="{{srcIndex < 3}}" wx:for="{{item.image}}" wx:key='' wx:for-item="srcItem" wx:for-index="srcIndex" class='fm-image-hidden{{index%2}} flex x-center y-center'>
            <view style='display:none'>
              <image mode='widthFix' class='loading' data-data="scene[{{index}}].image[{{srcIndex}}]" data-index="{{srcIndex}}" bindload='imageLoad' src='{{srcItem.imgsrc}}'></image> 
              </view>
              <image mode='aspectFill' src="{{srcItem.imgsrc}}" class='fm-image-item {{srcItem.loading ? "animate-show" : ""}}'></image>
              <view wx:if="{{srcIndex == 2}}" class='image-number'><view>+{{item.image.length - 3}} </view>               
              </view>
            </navigator>      
          </view>
        <!-- <view class='fm-item-title flex x-center'>
            3888套系
          </view> -->
       </view>
    </view>
</view>
